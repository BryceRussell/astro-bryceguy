---
import { Form, Input, Fieldset } from '@astro-bryceguy/form';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Welcome to Astro</title>
	</head>
	<body style="display:flex;flex-direction:column;gap:1rem;align-items:center;margin:3rem;">
        <Form method="POST">
			<Input type="text" />
			<Fieldset legend="Radio options">
				<Input label="One" type="radio" />
				<Input label="Two" type="radio" />
				<Input label="Three" type="radio" />
			</Fieldset>
		</Form>
	</body>
</html>
